# Production Environment Configuration

aws_region  = "us-east-1"
environment = "production"
project_name = "streaming-service"

# EKS Configuration
eks_cluster_version     = "1.29"
eks_node_instance_types = ["m6i.large", "m6i.xlarge"]
eks_node_desired_size   = 5
eks_node_min_size       = 3
eks_node_max_size       = 20

# Application Configuration
api_replicas    = 5
worker_replicas = 3

api_cpu_request    = "500m"
api_memory_request = "1Gi"

worker_cpu_request    = "2000m"
worker_memory_request = "4Gi"

# Redis Configuration
redis_node_type        = "cache.r6g.large"
redis_num_cache_nodes  = 3

# CloudFront Configuration
cloudfront_price_class = "PriceClass_All"

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"

# Docker Images (set via CI/CD)
# api_image    = "your-registry/streaming-service-api:v1.0.0"
# worker_image = "your-registry/streaming-service-worker:v1.0.0"
